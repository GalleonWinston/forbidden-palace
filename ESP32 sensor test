/*
 * MQ-4 Gas Sensor Test Code
 * Wiring:MQ4 to ESP32 GPI036
 */
void setup() {
  Serial.begin(115200);
  pinMode(36,INPUT); 
  Serial.println("Sensor initialized!Starting detection...");
}

void loop() {
  int gasValue=analogRead(36);
  float voltage=gasValue * (3.3/4095.0);

  Serial.print("Raw Value：");
  Serial.print(gasValue);
  Serial.print("| Voltage：");
  Serial.print(voltage)
  Serial.print(" V");

delay(1000);
}
